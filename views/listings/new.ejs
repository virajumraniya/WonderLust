<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2 mt-3">
    <h3>Create a New Listing</h3>
    <br />

    <form
      method="POST"
      action="/listings"
      novalidate
      class="row g-2 needs-validation"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Title should be valid</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Please write a short description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Image-link</lable>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
        />
        <div class="valid-feedback">Image URL/Link is not necessary</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            name="listing[price]"
            placeholder="enter price"
            type="number"
            class="form-control"
            required
          />
          <div class="valid-feedback">Price looks good!</div>
          <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            name="listing[country]"
            placeholder="enter country"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Country name looks good!</div>
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Location looks good!</div>
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <button class="btn btn-dark add-btn mt-2">Add</button>
    </form>
  </div>
</div>
